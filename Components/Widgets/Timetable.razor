@using TimetableHelper.Models
@if (days == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>0</th>
                @for(int i = 0; i < 11; i++)
                {
                    <th>@i</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var day in days)
            {
                <tr>
                    @for (int i = 0; i < 11; i++)
                    {
                        @if(day.Lessons[i] == null)
                        {
                            <td></td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
}

